# production host domains
W1_PROD_IP=<PROD-IP>/api

CLIENT_PROD_IP=<PROD-IP>
CLIENT_PROD_PORT=3000
W3_CLIENT_PROD_HOST=localhost:3000

BACKEND_PROD_IP=<PROD-IP>
BACKEND_PROD_PORT=5001

# development host domains
CLIENT_DEV_IP=localhost
CLIENT_DEV_PORT=3000

# Listen on all interfaces so host/frontend containers can reach dev server
BACKEND_DEV_IP=0.0.0.0
BACKEND_DEV_PORT=5001

# Path to slink2dali binary
SLINK2DALIPATH=/app/slink2dali # CHANGE THIS
                               # the path/directory should not include '/' at the end
# Control slink2dali logging verbosity (optional)
SLINK2DALI_VERBOSE_LOGS=false  # when true, keep detailed slink2dali logs; default is false to reduce disk usage
SLINK2DALI_VERBOSITY=-v        # slink2dali verbosity flag (e.g. -v, -vv, -q); defaults to -v if unset


# Local File Stores Directory
LOCALDBS_DIRECTORY=/app/localDBs # CHANGE THIS
                                 # the path/directory should not include '/' at the end
# Root directory for Raspberry Shake settings (optional)
RSHAKE_SETTINGS_PATH=/opt/settings  # used to discover station.cfg and related metadata; defaults to /opt/settings if unset

# W1 domains
W1_DEV_IP=earthquake-hub-backend_sender-backend_dep-test
W1_DEV_PORT=5000
# Optional W1 refresh-token endpoint (defaults to /device/refresh-token if unset)
# W1_REFRESH_PATH=/device/refresh-token

# Clock health NTP target (used by /health/time)
NTP_SERVER_HOST=time.google.com
NTP_SERVER_HOSTS=time.google.com,0.asia.pool.ntp.org,1.asia.pool.ntp.org
NTP_SERVER_PORT=123
NTP_REQUEST_TIMEOUT_MS=2000
# Legacy single-host override for NTP server (optional; prefer NTP_SERVER_HOSTS)
# NTP_SERVER=time.google.com

# Ringserver health defaults (used by /health/network)
RINGSERVER_DEFAULT_PORT=18000     # default TCP port for ringserver connectivity checks
RINGSERVER_TCP_TIMEOUT_MS=5000   # TCP connection timeout (ms) when probing ringserver

# Resource health sampling (used by /health/network)
RESOURCE_DISK_PATH=/             # filesystem path to monitor for disk usage
RESOURCE_CPU_SAMPLE_MS=1000      # CPU load sampling window in milliseconds

#MongoDB 
MONGO_CONNX_TYPE=docker
MONGO_HOST=mongodb_sender-backend_dep-test
MONGO_PORT=27017
MONGO_NAME=latestEQs

# production host domain (and for deployment testing)
CLIENT_PROD_HOST=localhost       # web app domain name
BACKEND_PROD_HOST=localhost/api
BACKEND_PROD_PORT=5000

#jsonwebtoken keys
ACCESS_TOKEN_PRIVATE_KEY=replace_with_secure_random
JWT_EXPIRY='30 days'

# Token refresh settings
# How often (ms) to check token age and refresh proactively; defaults to 900000 (15m) if unset
REFRESH_CHECK_INTERVAL_MS=900000
# Refresh when within this many ms of expiry; defaults to 600000 (10m) if unset
REFRESH_EXPIRY_LEEWAY_MS=600000
# Treat refresh tokens as expiring this many seconds before their actual expiry (defaults to 86400 / 24h)
REFRESH_TOKEN_LEEWAY_SECONDS=86400

# Push notifications keys. You can generate them with command "./node_modules/.bin/web-push generate-vapid-keys"
PUBLIC_VAPID_KEY=paste_public_key_here
PRIVATE_VAPID_KEY=paste_private_key_here
# This must be either a URL or a 'mailto:' address.
# For example: 'https://my-site.com/contact' or 'mailto: contact@my-site.com'
WEB_PUSH_CONTACT=mailto: contact@my-site.com

NODE_ENV=development
